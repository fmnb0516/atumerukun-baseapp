<div class="row">
	<div class="col-lg-12">
		
		<h4><i class="glyphicon glyphicon-user"></i> プロフィール</h4>
		<hr />
		<img src="{{configure.avater}}" class="profile-icon">
		<div class="profile-id">
			<a href="{{configure.email}}"><span class="label label-primary">author:{{configure.author}}</span></a>
		</div>
		<p>{{configure.description}}</p>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<h4><i class="glyphicon glyphicon-calendar"></i> リンク</h4>
		<hr/>
		{{#each configure.link}}
		<div>
			<i class="glyphicon glyphicon-chevron-right glyphicon-small"></i>
			<a href="{{url}}" target="_blank">{{title}}</a>
		</div>
		{{/each}}
	</div>
</div>

<div class="row">
	<div class="col-lg-12" style="margin-bottom: 10px;">
		<h4><i class="glyphicon glyphicon-calendar"></i> 最新記事</h4>
		<hr/>
			{{#each newest}}
			<div>
				<i class="glyphicon glyphicon-chevron-right glyphicon-small"></i>
				<a href="/post/{{post_id}}.html" target="_blank">{{title}}</a>
			</div>
			{{/each}}
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<h4><i class="glyphicon glyphicon-calendar"></i> カレンダー</h4>
		<hr/>
		<ul class="archive-list">
			{{#each calender}}
			<li class="closable-list">
				<i class="glyphicon glyphicon-circle-arrow-down"></i>
				<i class="glyphicon glyphicon-circle-arrow-right"></i>
				<a onclick="$(this).parent().toggleClass('closable-list');">{{label}}({{count}})</a>
				<ul>
					{{#each entries}}
					<li><a href="/blog/pages-archive/{{cal_id}}/0.html" >{{label}}({{count}})</a></li>
					{{/each}}
				</ul>
			</li>
			{{/each}}
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<h4><i class="glyphicon glyphicon-tags"></i> タグ</h4>
		<hr/>
		<ul class="categories-list">
			{{#each tags}}
			<li><i class="glyphicon glyphicon-tag glyphicon-small"></i>
			<a href="/tags/{{hash tag}}/0.html">{{tag}}({{cnt}})</a></li>
			{{/each}}
			<li><a href="/tags/list.html">More...</a></li>
		</ul>
	</div>
</div>
