<html>
	<head>
		{{include "head.meta.html.hbs" this}}
		<title>{{page.title}} - {{configure.site.sitename}}</title>
		{{include "head.css.html.hbs" this}}

        <style>
            .widget_tag_cloud .tagcloud a {
                background: #bbb;
                margin: 3px;
                padding:6px;
                text-decoration: none;
                border-left:solid 4px #555;
                color:#fff;
                font-size:12px;
            }
            
            .widget_tag_cloud .tagcloud a:hover{
                color: #000; 
                background:#ddd;
            }

            .widget_tag_cloud {
                list-style: none;
            }

            .widget_tag_cloud .tagcloud {
                margin: 10px 10px;
                display: inline-block;
            }
        </style>
	</head>
	
	<body>
		<div class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
			{{include "header.html.hbs" this}}
		</div>
		
		<div class="" style="margin-top: 90px; padding: 10px;">
			<div class="row">
				<div class="col-lg-12 col-md-12 cols-sm-12">
                    <h5 style="color: white;background-color: black;padding: 10px;margin: 0 15px;border-radius: 15px;">
						<i class="fas fa-book-medical"></i>
						{{page.title}}
					</h5>
                    <ht/>
                    <ul class="widget_tag_cloud">
                        {{#each tags}}
                        <li class="tagcloud"><a href="/tags/{{hash tag}}/0.html">{{tag}} ({{cnt}})</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
		</div>		
        <hr/>
		{{include "footer.html.hbs" this}}

		<span id="javascript-container" style="display: none;">
			{{include "javascript.html.hbs" this}}
		</span>
	</body>
</html>
